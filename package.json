{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "release": "changelogen --release --no-commit",
    "prepare": "husky"
  },
  "dependencies": {
    "@nuxt/image": "1.9.0",
    "@nuxt/ui": "3.0.0-alpha.12",
    "nuxt": "^3.15.4",
    "vue": "latest",
    "vue-router": "latest"
  },
  "devDependencies": {
    "@nuxtjs/html-validator": "1.8.2",
    "@nuxt/eslint": "1.1.0",
    "changelogen": "0.5.7",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.20.1",
    "husky": "9.1.7",
    "lint-staged": "15.4.3",
    "tailwindcss": "4.0.6",
    "typescript": "5.7.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && pnpm exec cz --hook || true"
    }
  },
  "version": "1.1.0"
}
